@using CoreDepartman.Models
@model List<departmanlar>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>DEPARTMAN</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    
   
    @foreach(var x in Model)
    {
        <tr>
           <td>@x.id</td>
            <td>@x.departmanad</td>
            <td><a href="/depart/DepartmanSil/@x.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/depart/DepartmanGetir/@x.id" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-default" style="background-color:#dee61d">Detaylar</a></td>
        </tr>
            
    }
          
</table>

<a href="/depart/YeniDepartman/" class="btn btn-primary">Yeni Departman</a>






